<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.PostgreSQL81Dialect
        </property>
        <property name="hibernate.connection.driver_class">
            org.postgresql.Driver
        </property>

        <!-- Assume test is the database name -->
        <property name="hibernate.connection.url">
            jdbc:postgresql://localhost/postgis20
        </property>
        <property name="hibernate.connection.username">
            dart_admin
        </property>
        <property name="hibernate.connection.password">
            dilfer
        </property>
        <property name="hibernate.default_schema">
            flightaware
        </property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">validate</property>
        <mapping package="net.muroc"/>
        <mapping class="net.muroc.FlightAwareTrackType"/>
        <mapping class="net.muroc.FlightAwarePointType"/>


        <!-- List of XML mapping files
        <mapping resource="net.muroc/flight_point.hbm.xml"></mapping>
        <mapping resource="net.muroc/flight_track.hbm.xml"></mapping>-->

    </session-factory>
</hibernate-configuration>